<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <title><%= title %></title>
    <style>
      .table {
        border-collapse: collapse;
      }
      .table th,
      .table td {
        border: 1px solid black;
        padding: 10px;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/user-header') %> <% if (created) {%>
    <div class="alert alert-success">Note has been created!</div>
    <% } %> <% if (error) {%>
    <div class="alert alert-danger">Something went wrong!</div>
    <% } %>

    <a class="nav-link" href="/appointmentPage">
      <button type="button" class="btn btn-warning">Новая запись</button>
    </a>
    <div class="container">
      <table class="table text-center">
        <thead class="thead-dark">
          <tr>
            <th class="bg-dark text-light">Дата создания</th>
            <th class="bg-dark text-light">ФИО</th>
            <th class="bg-dark text-light">Телефон</th>
            <th class="bg-dark text-light">Комментарий</th>
          </tr>
        </thead>
        <tbody>
          <% appointments.forEach(function(appointment ) { %>
          <tr>
            <td><%= appointment.creation_date %></td>
            <td><%= appointment.name %></td>
            <td><%= appointment.phone %></td>
            <td>
              <%= appointment.symptom %>

              <button
                class="btn btn-danger btn-sm float-right"
                data-type="remove"
                data-id="<%= appointment.id %>"
              >
                &times;
              </button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <script src="/app.js"></script>
  </body>
</html>
